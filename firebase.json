{
  "hosting": {
    "public": "dist/cadeaux-vuidart/browser",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [{ "source": "**", "destination": "/index.html" }]
  },
  "emulators": {
    "ui": {
      "enabled": true,
      "port": 4000
    },
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "database": {
      "host": "127.0.0.1",
      "port": 9000
    },
    "singleProjectMode": true
  },
  "database": {
    "rules": "firebase/database.rules.json"
  }
}
